<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="481" Width="800">
    <StackPanel>
        <ListBox x:Name="CWind" HorizontalAlignment="Center" Height="393" Margin="0,10,0,0" VerticalAlignment="Top" Width="780" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <StackPanel Orientation="Horizontal" Width="780">
            <TextBox x:Name="Message" Height="21" TextWrapping="Wrap" Text="" Width="732"/>
            <Grid Width="48" RenderTransformOrigin="0.5,0.5">
                <Button x:Name="Connect" Content="Connect" VerticalAlignment="Center" Click="Con" HorizontalAlignment="Left" Width="48"/>
                <Button x:Name="Send" Visibility="Hidden" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Sen" Width="48"/>
            </Grid>
        </StackPanel>

    </StackPanel>
</Window>
